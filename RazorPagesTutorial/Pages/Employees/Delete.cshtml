@page "{id}"
@model RazorPagesTutorial.Pages.Employees.DeleteModel
@{
    ViewData["Title"] = "Delete Page";
    //hide buttons from partial view
    ViewData["ShowButtons"] = false;
}
<h1>delete confirmation</h1>
<div class="alert alert-danger">
    <partial name="Shared/_DispalyEmployeePartial" model="Model.Employee" view-data="ViewData"  />
    <h5>Are you sure you want to delete this employee - @Model.Employee.Name?</h5>
    <form method="post">
        <button type="submit" class="btn btn-danger">yes</button>
        <a asp-page="Index" class="btn btn-primary">no</a>
    </form>
</div>